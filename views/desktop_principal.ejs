<%- include('./partials/header.ejs') %>
<div style="height: 100px;"></div>
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-4" >
    <div class="pure-menu custom-restricted-width" style="width: 70%;">
      <span class="pure-menu-heading">Categorias</span>
      <ul class="pure-menu-list">
        <li class="pure-menu-item" style="background-color: aquamarine;">
          <a href="/tabletop" class="pure-menu-link">Juegos de Mesa</a>
        </li>
        <li class="pure-menu-item" style="background-color: cornflowerblue;">
          <a href="/tcg" class="pure-menu-link">TCG</a>
        </li>
        <li class="pure-menu-item" style="background-color: lightcyan;">
          <a href="/books" class="pure-menu-link">Libros de Terror</a>
        </li>
        <li class="pure-menu-item">
          <a href="/manga" class="pure-menu-link" style="background-color: deepskyblue;">Manga</a>
        </li>
      </ul>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-3-4">
    <h1 style="color: white"><%= locals.categoria %></h1>
    <table class="pure-table pure-table-horizontal">
      <thead>
        <tr>
          <th>Elemento</th>
          <th>Nombre</th>
          <th>Precio</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(element => { %>
            <form action="/detail_product" method="get">
        <tr>
          <td style="border: solid 1px black; height: 150px; width: 150px; background-image: url('<%=element.imagen %>'); background-size: cover;" ></th>
          <td><%= element.nombre %></td>
          <td><%= element.precio %></td>
          <td>
            <button type="submit" class="pure-button pure-button-primary">
              Ver Producto
            </button>
          </td>
        </tr>
            <input type="hidden" name="id" value="<%= element.id %>" />
            <input type="hidden" name="nombre" value="<%= element.nombre %>" />
            <input
              type="hidden"
              name="descripcion"
              value="<%= element.descripcion %>"
            />
            <input type="hidden" name="precio" value="<%= element.precio %>" />
            <input type="hidden" name="imagen" value="<%= element.imagen %>" />
           </form>
        <% }) %>
      </tbody>
    </table>
  </div>
</div >
<div style="height: 200px;"></div>

